<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.itheima.domain.TOrderitem" table="orderitem" schema="shop">
        <id name="itemid">
            <column name="itemid" sql-type="varchar(100)" length="100"/>
        </id>
        <property name="count">
            <column name="count" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="subtotal">
            <column name="subtotal" sql-type="double" precision="-1" not-null="true"/>
        </property>
        <property name="pid">
            <column name="pid" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="oid">
            <column name="oid" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <!--<many-to-one name="productByPid" class="com.itheima.domain.TProduct">
            <column name="pid" not-null="true"/>
        </many-to-one>
        <many-to-one name="ordersByOid" class="com.itheima.domain.TOrders">
            <column name="oid" not-null="true"/>
        </many-to-one>-->
    </class>
</hibernate-mapping>