<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.itheima.domain.TOrders" table="orders" schema="shop">
        <id name="oid">
            <column name="oid" sql-type="varchar(100)" length="100"/>
        </id>
        <property name="ordertime">
            <column name="ordertime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="total">
            <column name="total" sql-type="double" precision="-1" not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="telephone">
            <column name="telephone" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="uid">
            <column name="uid" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <!--<set name="orderitemsByOid" inverse="true">
            <key>
                <column name="oid" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="com.itheima.domain.TOrderitem"/>
        </set>-->
    </class>
</hibernate-mapping>